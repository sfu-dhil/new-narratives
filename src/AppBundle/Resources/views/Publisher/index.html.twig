{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Publisher List</h1>
    <p class="count">
        Displaying {{ publishers|length }} publishers of {{ publishers.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('publisher_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('publisher_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Created</th>
                <th>Updated</th>
            </tr>
        </thead>
        <tbody>
            {% for publisher in publishers %}
                <tr>
                    <td>
                        <a href="{{ path('publisher_show', { 'id': publisher.id }) }}">
                            {{ publisher.name }}
                        </a>                    
                    </td>
                    <td>
                        {{ publisher.created|date('Y-m-d H:i:s') }}
                    </td>
                    <td>{{ publisher.updated|date('Y-m-d H:i:s') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(publishers) }}
    </div>

{% endblock %}
