{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Work List</h1>
    <p class="count">
        Displaying {{ works|length }} works of {{ works.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('work_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
            <a href="{{ path('work_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Edition</th>
                <th>Volume</th>
                <th>Publisher</th>
            </tr>
        </thead>
        <tbody>
            {% for work in works %}
                <tr>
                    <td>
                        <a href="{{ path('work_show', { 'id': work.id }) }}">
                            {{ work.title }}
                        </a>
                    </td>
                    <td>
                        {% set contribution = work.getFirstContribution() %}
                        {% if contribution is not null %}
                            {{ contribution.person.fullname }}
                            {% if contribution.role.name != 'aut' %}({{ contribution.role }}){% endif %}
                        {% endif %}
                    </td>
                    <td>{{ work.edition }}</td>                    
                    <td>{{ work.volume }}</td>
                    <td>{{ work.publicationPlace }} {{ work.publisher }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(works) }}
    </div>

{% endblock %}
