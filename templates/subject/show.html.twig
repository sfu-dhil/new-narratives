{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>Subject</h1>
{% endblock %}

{% block action_buttons %}
    <a href="{{ path('subject_index') }}" class="btn btn-light">
        <span class="bi bi-arrow-left"></span> Back
    </a>
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('subject_edit', { 'id': subject.id }) }}" class="btn btn-light">
            <span class='bi bi-pencil-square'></span> Edit
        </a>
        <a href="{{ path('subject_delete', { 'id': subject.id }) }}" class="btn btn-light" data-confirm="Are you sure you want to delete this Subject?">
            <span class='bi bi-x-lg'></span> Delete
        </a>
    {% endif %}
{% endblock %}

{% block body %}
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ subject.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ subject.label }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>
                    <a href="{{ path('subject_source_show', {'id': subject.subjectSource.id }) }}">{{ subject.subjectSource }}</a>
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ subject.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ subject.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ subject.updated|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    {% include 'work/workList.html.twig' with {'works': subject.works} %}

{% endblock %}
