{{ form_start(form) }}
{{ form_widget(form) }}
<div class="mb-3 row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
        <input type="submit" value="Save" class="btn btn-primary" />
        {% if person.id is null %}
            <a href="{{ path('person_index') }}" class="btn btn-warning"> Cancel </a>
        {% else %}
            <a href="{{ path('person_show', { 'id': person.id }) }}" class="btn btn-warning"> Cancel </a>
        {% endif %}
    </div>
</div>
{{ form_end(form) }}

