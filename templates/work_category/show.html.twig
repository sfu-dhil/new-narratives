{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>Work Category</h1>
{% endblock %}

{% block action_buttons %}
    <a href="{{ path('work_category_index') }}" class="btn btn-light">
        <span class="bi bi-arrow-left"></span> Back
    </a>
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('work_category_edit', { 'id': workCategory.id }) }}" class="btn btn-light">
            <span class='bi bi-pencil-square'></span> Edit
        </a>
        <a href="{{ path('work_category_delete', { 'id': workCategory.id }) }}" class="btn btn-light" data-confirm="Are you sure you want to delete this WorkCategory?">
            <span class='bi bi-x-lg'></span> Delete
        </a>
    {% endif %}
{% endblock %}

{% block body %}
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ workCategory.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ workCategory.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ workCategory.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ workCategory.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ workCategory.updated|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    {% include 'work/workList.html.twig' with {'works': workCategory.works} %}

{% endblock %}
