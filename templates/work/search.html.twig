{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>Advanced Search</h1>
    {% if works|length > 0 %}
        <p class="count">
            Displaying {{ works|length }} works of {{ works.getTotalItemCount }} total.
        </p>
    {% endif %}
{% endblock %}

{% block body %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
	<div class="mb-3 row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="submit" value="Search" class="btn btn-primary" />
            <a href="{{ path('work_search') }}" class="btn btn-danger">Reset</a>
            <a href="{{ path('work_index') }}" class="btn btn-warning">Cancel</a>
        </div>
    </div>

    {{ form_end(form) }}

    {% if works|length > 0 %}
        {% include 'work/workList.html.twig' with {'works': works} %}
        <div class="navigation">
            {{ knp_pagination_render(works) }}
        </div>
    {% endif %}

{% endblock %}

{% block javascripts %}
    {% include '@NinesEditor/editor/widget.html.twig' %}
{% endblock %}