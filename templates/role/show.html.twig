{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>Role</h1>
{% endblock %}

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('role_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
            <a href="{{ path('role_edit', { 'id': role.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-edit'></span> Edit
            </a>
            <a href="{{ path('role_delete', { 'id': role.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Role?">
                <span class='glyphicon glyphicon-remove'></span> Delete
            </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ role.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ role.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ role.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ role.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ role.updated|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <h2>People With This Role</h2>
    <ol>
    {% for c in counts %}
        <li><a href='{{ path('person_show', {'id': c.p.id}) }}'>{{ c.p }}</a> - {{ c.c }}</li>
    {% endfor %}
    </ol>

{% endblock %}
